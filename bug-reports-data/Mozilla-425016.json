                {
                    "is_in_lex_summary": false, 
                    "text": "The win2k3 build image also has the windows component \"Internet Explorer\nEnhanced Security Configuration\" enabled for Administrator users.", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": true, 
                    "text": " Which\nbasically turns on a series of annoying dialogs every time you navigate to any\nsite.\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "You can turn this off through Add Remove Programs -> Windows Components ->\nInternet Explorer Enhanced Security Configuration.\n", 
                    "is_in_email_summary": false
                }
            ], 
