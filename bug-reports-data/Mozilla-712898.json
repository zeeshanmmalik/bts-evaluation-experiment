                {
                    "is_in_lex_summary": false, 
                    "text": "This appears to be a support question. ", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "Please in future use our support forum for issues such as this.\n", 
