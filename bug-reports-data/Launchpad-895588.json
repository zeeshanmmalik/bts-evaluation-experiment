                    "text": "0000601 has a time option, but no neutral or random option.\r", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "If we combine it into \r\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "[WEAPON]\r\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "MakeOwner= attacker // normal // neutral // random\r\n", 
                    "is_in_email_summary": false
                }, 
                {
