                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "This will bring more potential uses (possibly more support) and avoids somewhat of a redundancy.\n", 
                    "is_in_email_summary": false
                }
            ], 
