                    "text": "    CGROUP_MEM_RES_CTLR_SWAP_ENABLED. ", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "Swap accounting can be enabled     using kernel parameter 'swapaccount'\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "[...]\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "You need to use a kernel parameter to active it - equal to the memory  controller.\n", 
                    "is_in_email_summary": false
                }
