            "date": "2011-11-01 15:17:18", 
            "sentences": [
                {
                    "is_in_lex_summary": true, 
                    "text": "Would it be possible to include all the translations in the Unity source package? ", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": true, 
                    "text": "It would make it so much easier to port to other distributions (don't need to download all the language packs).\n", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": true, 
                    "text": "The current packaging ignores those files anyway, so it won't affect Ubuntu's packaging of Unity.\n", 
                    "is_in_email_summary": true
                }
            ], 
            "name": "cxl", 
            "email": "cxl"
        }, 
