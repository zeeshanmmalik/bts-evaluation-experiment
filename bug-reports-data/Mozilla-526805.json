            "sentences": [
                {
                    "is_in_lex_summary": false, 
                    "text": "Nathan, thanks for the bug report.", 
                    "is_in_email_summary": false
                }, 
                {
                    "is_in_lex_summary": true, 
                    "text": "  Could you also run your test program\non Solaris?", 
                    "is_in_email_summary": false
                }, 
                {
