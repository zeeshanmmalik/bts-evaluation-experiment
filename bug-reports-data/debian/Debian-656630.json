                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "\n", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "$ diff cciss-vol-statusd.old cciss-vol-statusd\n", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": false, 
                    "text": "62c62\n", 
                    "is_in_email_summary": true
                }, 
                {
                    "is_in_lex_summary": false, 
